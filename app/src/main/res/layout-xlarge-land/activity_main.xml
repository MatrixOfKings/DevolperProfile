<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/imageView14"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="#1F1F1F"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Devslopers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView14" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="40dp" android:textSize="24sp"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView16"
            app:layout_constraintStart_toEndOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintEnd_toStartOf="@+id/imageView17"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView14"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView17"
            app:layout_constraintStart_toEndOf="@+id/imageView16" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView18" app:layout_constraintTop_toTopOf="@+id/imageView16"
            app:layout_constraintBottom_toBottomOf="@+id/imageView16" android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView18"
            app:layout_constraintStart_toEndOf="@+id/imageView17" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2" app:layout_constraintTop_toTopOf="@+id/imageView17"
            app:layout_constraintBottom_toBottomOf="@+id/imageView17" android:layout_marginEnd="32dp"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Customaiz Dashboard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/imageView14"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:textSize="18sp"
            android:textColor="@android:color/background_light" android:background="@drawable/rounded_gradient"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView19" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView20" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView19"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp" android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="0.087"
            app:layout_constraintStart_toStartOf="@+id/imageView19" app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/imageView19" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView22"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView21"
            app:layout_constraintVertical_bias="0.207"
            android:layout_marginTop="32dp" android:scaleType="centerCrop" app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="@+id/imageView21"/>
</android.support.constraint.ConstraintLayout>